.message__card{data: {message: {id: message.id}}}
  .message__details
    .message__details__user
      =message.user.name
    .message__details__time
      =message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__content
    - if message.text.present?
      = message.text
    = image_tag message.image.url if message.image.present?